                            <ol class="space-y-3 font-medium list-decimal ">
                                <% categories.forEach(category => { %>
                                    <li><%= category.name %></li>
                                  <% }) %>
                            </ol>
                        </div>
                    </div>
                    <% } %>

                    <!-- Latest Article box -->
                    <div class="mb-6 ">
                        <div class="cardHeader font-semibold text-white text-xl p-6 bg-[#007bff] text-center relative ">
                            Latest Article

                            <svg xmlns="http://www.w3.org/2000/svg " width="10 " height="44 " viewBox="0 0 10 44 " fill="none " class="leftHandle ">
                                        <circle r="5 " transform="matrix(4.37114e-08 1 1 -4.37114e-08 5 39) " fill="#0656AC "></circle>
