    <!-- content section end -->
    <script>
        // Get the post title and URL from the server-side code
        const postTitle = '<%= postTitle %>';
        const postUrl = '<%= postUrl %>';
    
        // Get the share URLs for all platforms
        const shareUrls = shareButtons(postUrl, postTitle);
    
        // Now, you can set the href attribute of each share button to the corresponding URL
        document.querySelector('.facebook-share-button').href = shareUrls.facebook;
        document.querySelector('.twitter-share-button').href = shareUrls.twitter;
        document.querySelector('.linkedin-share-button').href = shareUrls.linkedin;
    </script>
