<%- (include('../frontend/head/head.ejs')) %>
<body class="font-custom">
    <!-- header start here -->
    <%- (include('../frontend/head/header.ejs')) %>
    <!-- header end here -->

    <!-- banner section start -->
    <section class="bg-[#DBF4FF] sm:h-80 h-60 flex items-center align-middle">
        <div class="container">
            <h1 class="w-full h-full text-5xl font-semibold text-center sm:text-4xl">Contact</h1>
        </div>
    </section>
    <!-- banner section end -->

    <!-- content section start -->
    <div class="pt-10 pb-10 bg-white md:pt-20 md:pb-12">
        <div class="container">
            <div class="flex flex-col gap-8 md:flex-row">
                <!-- left col start -->
                <div class="w-full md:w-2/3">
                    <!-- contact form start -->
                    <h2 class="mb-4 text-4xl font-semibold sm:text-3xl">Contact Form</h2>
                    <form class="contactForm" action="#" method="post">
                        <div class="mb-2">
                            <input type="text" name="yourName" class="w-full bg-[#F0F7FA] rounded-[10px] p-5 focus:outline-none" placeholder="Your name" value="" required="">
                        </div>
                        <div class="mb-2">
                            <input type="email" name="email" class="w-full bg-[#F0F7FA] rounded-[10px] p-5 focus:outline-none" placeholder="Your email address" value="" required="">
                        </div>
                        <div class="mb-2">
                            <input type="text" name="yourWebsite" class="w-full bg-[#F0F7FA] rounded-[10px] p-5 focus:outline-none" placeholder="Your Website" value="" required="">
                        </div>
                        <div class="mb-2">
                            <select class="w-full bg-[#F0F7FA] rounded-[10px] p-5 focus:outline-none" aria-label="Default select example" name="scrabble_type">
                                <option value="1" selected="">Subject</option>
                                <option value="2">Subject 1</option>
                             </select>
                        </div>
                        <div class="mb-2">
                            <textarea class="w-full bg-[#F0F7FA] rounded-[10px] p-5 focus:outline-none" name="message" placeholder="Your Message" value="" rows="6"></textarea>
                        </div>
                        <div class="mb-2">
                            <!-- <img src="images/recaptcha.svg" alt="reCaptcha" /> -->
                            <div class="g-recaptcha" data-sitekey="YOUR_SITE_KEY"></div>
                        </div>
                        <div class="mt-6">
                            <button type="submit" class="w-full py-4 bg-buttonPrimary rounded-[10px] text-white hover:opacity-50">Submit</button>
                        </div>
                    </form>

                </div>
                <!-- left col end -->

                <!-- right col start -->
                <div class="w-full md:w-1/3">
                    <!-- Word Finders box -->
                    <%- (include('../frontend/right_col/word_finder.ejs')) %>

                    <!-- Dictionaries -->
                  <%- (include('../frontend/right_col/Dictionaries.ejs')) %>

                    <!-- List of Words -->
                    <%- (include('../frontend/right_col/list_of_words.ejs')) %>

                </div>
                <!-- right col end -->
            </div>
        </div>
    </div>
    <!-- content section end -->

    <!-- footer start  -->
    <%- (include('../frontend/footer/footer.ejs')) %>
<!-- footer end  -->

<%- (include('../frontend/script/script.ejs')) %>