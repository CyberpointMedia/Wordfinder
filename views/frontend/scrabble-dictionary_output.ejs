<%- (include('../frontend/head/head.ejs')) %>

    <body class="font-custom">
        <!-- header start here -->
        <%- (include('../frontend/head/header.ejs')) %>
            <!-- header end here -->

            <!-- content section start -->
            <div class="pt-10 pb-10 bg-white md:pt-20 md:pb-20">
                <div class="container">
                    <div class="flex flex-col gap-8 md:flex-row">

                        <!-- left col start -->
                        <div class="w-full md:w-2/3">
                            <% if (data===null) { %>

                                <div
                                    class="border border-[#007BFF4D] rounded-[20px] md:p-[40px] p-[30px] mb-6 custom-card">
                                    <h2 class="mb-4 text-4xl font-medium">Word Games</h2>
                                    <div class="mb-1">
                                        <p class="text-sm text-black sm:text-lg leading-10">
                                            Scrabble US/Canada (OTCWL)
                                            <span
                                                class="bg-[#b4b4b4] rounded-[5px] ms-2 p-2 px-3 text-white text-xs">NO</span>
                                            <span class="italic">(15 Points)</span>
                                        </p>
                                    </div>
                                    <div class="mb-1">
                                        <p class="text-sm text-black sm:text-lg leading-10">
                                            Scrabble UK (SOWPODS)
                                            <span
                                                class="bg-[#b4b4b4] rounded-[5px] ms-2 p-2 px-3 text-white text-xs">NO</span>
                                            <span class="italic">(15 Points)</span>
                                        </p>
                                    </div>
                                    <div class="mb-1">
                                        <p class="text-sm text-black sm:text-lg leading-10">
                                            Words With Friends
                                            <span
                                                class="bg-[#b4b4b4] rounded-[5px] ms-2 p-2 px-3 text-white text-xs">NO</span>
                                            <span class="italic">(15 Points)</span>
                                        </p>
                                    </div>
                                </div>
                                <h5 class="mb-4 text-[20px] font-medium">Word Definition</h5>
                                <div
                                    class="border border-[#007BFF4D] rounded-[20px] md:p-[40px] p-[30px] mb-8 custom-card">
                                    <i>
                                        No Definition Found
                                    </i>
                                </div>

                                <% } else { %>
                                    <div
                                        class="border border-[#007BFF4D] rounded-[20px] md:p-[40px] p-[30px] mb-6 custom-card">
                                        <h2 class="mb-4 text-4xl font-medium">Word Games</h2>
                                        <div class="mb-1">
                                            <p class="text-sm text-black sm:text-lg leading-10">
                                                Scrabble US/Canada (OTCWL)
                                                <span
                                                    class="bg-[#007BFF] rounded-[5px] ms-2 p-2 px-3 text-white text-xs">Yes</span>
                                                <span class="italic">(15 Points)</span>
                                            </p>
                                        </div>
                                        <div class="mb-1">
                                            <p class="text-sm text-black sm:text-lg leading-10">
                                                Scrabble UK (SOWPODS)
                                                <span
                                                    class="bg-[#007BFF] rounded-[5px] ms-2 p-2 px-3 text-white text-xs">Yes</span>
                                                <span class="italic">(15 Points)</span>
                                            </p>
                                        </div>
                                        <div class="mb-1">
                                            <p class="text-sm text-black sm:text-lg leading-10">
                                                Words With Friends
                                                <span
                                                    class="bg-[#007BFF] rounded-[5px] ms-2 p-2 px-3 text-white text-xs">Yes</span>
                                                <span class="italic">(15 Points)</span>
                                            </p>
                                        </div>
                                    </div>
                                    <h5 class="mb-4 text-[20px] font-medium">Word Definition</h5>
                                    <div
                                        class="border border-[#007BFF4D] rounded-[20px] md:p-[40px] p-[30px] mb-8 custom-card">
                                        <i>
                                            <%= data.lexicalCategory %>
                                        </i>
                                        <h6 class="mb-3 mt-2 text-[20px] text-black"><b>Definitions </b></h6>
                                        <p>
                                            <%= data.definition %>
                                        </p>
                                        <h6 class="mb-3 text-[20px] text-black"><b>Examples </b></h6>
                                            <% data.examples.forEach(example=> { %>
                                                <p>
                                                    <%= example %>
                                                </p>
                                                <% }); %>

                                        <h6 class="mb-3 text-[20px] text-black"><b>Synonyms </b></h6>
                                        <ul class="flex flex-wrap gap-3 mt-4 mb-6 tagsMain">
                                            <% data.synonyms.forEach(synonym=> { %>
                                                <li class="border border-[#007BFF] rounded-[5px] py-2 font-normal px-3 tag text-[#007bff] text-base">
                                                    <%= synonym %>
                                                </li>
                                                <% }); %>
                                        </ul>
                                    </div>

                                    <% } %>


                        </div>
                        <!-- left col end -->
                        <!-- right col start -->
                        <div class="w-full md:w-1/3">
                            <!-- Word Finders -->
                            <%- (include('../frontend/right_col/word_finder.ejs')) %>
                                <!-- Words By Length -->
                                <%- (include('../frontend/right_col/words_of_length.ejs')) %>
                                    <!-- Words that Start with -->
                                    <%- (include('../frontend/right_col/words_that_start_with.ejs')) %>
                                        <!-- catorgies -->
                                        <%- (include('../frontend/right_col/category.ejs')) %>
                                            <!-- Popular Searches -->
                                            <%- (include('../frontend/right_col/Popular_Searches_box.ejs')) %>
                                                <!-- Latest Article -->
                                                <%- (include('../frontend/right_col/latest_article.ejs')) %>
                        </div>
                        <!-- right col end -->
                    </div>
                </div>
            </div>
            <!-- content section end -->
            <!-- footer start  -->
            <%- (include('../frontend/footer/footer.ejs')) %>
                <!-- footer end  -->
                <%- (include('../frontend/script/script.ejs')) %>