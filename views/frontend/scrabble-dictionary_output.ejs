<%- (include('../frontend/head/head.ejs')) %>
<body class="font-custom">
    <!-- header start here -->
    <%- (include('../frontend/head/header.ejs')) %>
    <!-- header end here -->
    <h2>Word Games</h2>
<p>Scrabble US/Canada (OTCWL) Yes (14 Points)</p>
<p>Scrabble UK (SOWPODS) Yes (14 Points)</p>
<p>Words With Friends Yes (15 Points)</p>

<h2><%= data.results[0].word %> Definition</h2>
<p>(<%= data.results[0].lexicalEntries[0].lexicalCategory.text %>)</p>

<% data.results[0].lexicalEntries[0].entries[0].senses.forEach(sense => { %>
    <h3>Definitions</h3>
    <p><%= sense.definitions[0] %></p>

    <h3>Examples</h3>
    <% sense.examples.forEach(example => { %>
        <p><%= example.text %></p>
    <% }); %>

    <h3>Synonyms</h3>
    <% sense.synonyms.forEach(synonym => { %>
        <p><%= synonym.text %></p>
    <% }); %>
<% }); %>

    <!-- content section start -->
    <div class="pt-10 pb-10 bg-white md:pt-20 md:pb-20">
        <div class="container">
            <div class="flex flex-col gap-8 md:flex-row">
                <!-- left col start -->
                <%- (include('../frontend/left_col/left_col.ejs')) %>
                <!-- left col end -->
                <!-- right col start -->
                <div class="w-full md:w-1/3">
                    <!-- Word Finders -->
                    <%- (include('../frontend/right_col/word_finder.ejs')) %>
                        <!-- Words By Length -->
                        <%- (include('../frontend/right_col/words_of_length.ejs')) %>
                            <!-- Words that Start with -->
                            <%- (include('../frontend/right_col/words_that_start_with.ejs')) %>
                                <!-- catorgies -->
                                <%- (include('../frontend/right_col/category.ejs')) %>
                                    <!-- Popular Searches -->
                                    <%- (include('../frontend/right_col/Popular_Searches_box.ejs')) %>
                                        <!-- Latest Article -->
                                        <%- (include('../frontend/right_col/latest_article.ejs')) %>
                </div>
                <!-- right col end -->
            </div>
        </div>
    </div>
    <!-- content section end -->
    <!-- footer start  -->
    <%- (include('../frontend/footer/footer.ejs')) %>
    <!-- footer end  -->
<%- (include('../frontend/script/script.ejs')) %>
