<!-- views/editor/all-editor.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #007BFF;
            color: white;
        }

        a {
            text-decoration: none;
            color: #007BFF;
            margin-right: 10px;
        }

        .back-btn {
            margin-top: 20px;
            background-color: #007BFF;
            color: #fff;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        .delete-btn {
            background-color: #dc3545;
            color: #fff;
            padding: 5px 10px;
            border: none;
            cursor: pointer;
            border-radius: 3px;
        }
    </style>
    <title>All Editors</title>
</head>
<body>

<h1>All Editors</h1>

<!-- Display a table of all editors -->
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% editors.forEach(editor => { %>
            <tr>
                <td><strong><%= editor.name %></strong></td>
                <td><%= editor.email %></td>
                <td>
                    <!-- Button to delete the editor -->
                    <button onclick="deleteEditor('<%= editor._id %>')" class="delete-btn">Delete</button>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
<br><br>
<!-- Button to create a new editor -->
<a href="/admin/create-editor" class="create-btn">Create New Editor</a>

<!-- Button to go back to the admin dashboard -->
<a href="/admin/dashboard" class="back-btn">Back to Dashboard</a>

<!-- Script to handle editor deletion -->
<script>
    function deleteEditor(editorId) {
        if (confirm("Are you sure you want to delete this editor?")) {
            window.location.href = `/admin/delete-editor/${editorId}`;
        }
    }
</script>

</body>
</html>
