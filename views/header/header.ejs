<!-- header Start -->
<header class="bg-white border-b shadow-md app-header">
    <div class="flex items-center justify-between w-full gap-3 px-3">


        <!-- Sidenav Menu Toggle Button -->
        <button id="button-toggle-menu" class="p-2 nav-link">
            <span class="sr-only">Menu Toggle Button</span>
            <span class="flex items-center justify-center w-6 h-6">
                <i data-lucide="menu" class="w-6 h-6 text-xl"></i>
            </span>
        </button>

        <!-- Profile Dropdown Button -->
        <div class="hs-dropdown relative inline-flex [--placement:bottom-right]">
            <button id="hs-dropdown-default" type="button" class="flex items-center hs-dropdown-toggle nav-link">
                <img src="<%= user && user.image ? user.image : '/images/admin.svg' %>" alt="user-image" class="w-8 h-8 rounded-full">
                    <div class="hidden lg:flex">
                    <span class="mx-2 text-sm">Admin</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" class="down-arrow">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M12.0077 12.3551L7.46719 8L6 9.52897L12.0077 15.2742L18 9.52897L16.5328 8L12.0077 12.3551Z" fill="#393939"/>
                      </svg>
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" class="hidden active-Uparrow">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M11.9923 11.6449L16.5328 16L18 14.471L11.9923 8.72581L6 14.471L7.46719 16L11.9923 11.6449Z" fill="#007BFF"/>
                      </svg>
                </div>
            </button>

            <div class="hs-dropdown-menu transition-[opacity,margin] duration-[0.1ms] hs-dropdown-open:opacity-100 opacity-0 hidden z-10 mt-2 min-w-[10rem] bg-white border border-gray-200 shadow-md rounded py-2" aria-labelledby="hs-dropdown-default">
                <a class="flex items-center gap-x-3.5 py-2 px-5 text-sm hover:bg-gray-100" href="/user/user-profile">
                    <i data-lucide="user" class="w-4 h-4 me-2"></i>
                    <span>My Account</span>
                </a>
                <a class="flex items-center gap-x-3.5 py-2 px-5 text-sm hover:bg-gray-100" href="/user/user-profile">
                    <i data-lucide="edit" class="w-4 h-4 me-2"></i>
                    <span>Edit</span>
                </a>
                <hr class="my-2 border-gray-200">
                <a class="flex items-center gap-x-3.5 py-2 px-5 text-sm hover:bg-gray-100" href="/auth/logout">
                    <i data-lucide="log-out" class="w-4 h-4 me-2"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </div>
</header>
<!-- header End -->